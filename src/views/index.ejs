
<%- include('partials/_header') %>

	<div class="container">
		<div class="row">

			<!-- FORMULARIO -->
			<div class="col-md-3">
				<div class="card">
					<div class="card-body">

						<form action="/add" method="POST">
<!----------------------------------------------------------------------------------------->							
							<div class="form-group">
								<input type="text" name="Nombre" placeholder="Nombre" required class="form-control">
							</div>

							<div class="form-group">
								<input type="text" name="Apellido" placeholder="Apellido" required class="form-control">
							</div>

							<div class="form-group">
								<input type="email" name="Email" placeholder="Email" 
								required class="form-control">
							</div>

							<div class="form-group">
								<input type="tel" name="Telefono" placeholder="0123-456-789" pattern="[0-9]{4}-[0-9]{3}-[0-9]{3}" required class="form-control">
							</div>

							<div class="form-group">
								<input type="date" name="FechaNacimiento" placeholder="Fecha de Nacimiento" required min="1900-01-01" max="2019-12-31" class="form-control">
							</div>

							

							<div class="form-group">
								<input type="number" name="Edad"  placeholder="Edad" class="form-control"> 
							</div>
<!---------------------------------------------------------------------------------------->

							<button type="submit" class="btn btn-primary btn-block">
								ADD
							</button>							
							
						</form>
						
					</div>
					
				</div>
				
			</div>

			<!-- LISTA DE DATOS-->
			<div class="col-md-9">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>N°</th>
							<th>Nombre</th>
							<th>Apellido</th>
							<th>Email</th>
							<th>Teléfono</th>
							<th>Fecha de Nacimiento</th>
							<th>Edad</th>
							<th>OPERACIONES</th>
						</tr>
					</thead>
					<body>

						<% for(var i = 0; i < tasks.length; i++) { %>
						
						<tr>
							<td><%= i + 1 %></td>
							<td><%= tasks[i].Nombre %></td>
							<td><%= tasks[i].Apellido %></td>
							<td><%= tasks[i].Email %></td>
							<td><%= tasks[i].Telefono %></td>
							<td><%= tasks[i].FechaNacimiento %></td>
							<td><%= tasks[i].Edad %></td>
							<td>
								<a href="/edit/<%= tasks[i]._id %>" class="btn btn-info"> EDITAR</a>
								<a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger"> ELIMINAR	</a>
							</td>
						</tr>

						<% } %>
						
					</body>
				</table>
				
			</div>
		</div>
	</div>

<%- include('partials/_footer') %>